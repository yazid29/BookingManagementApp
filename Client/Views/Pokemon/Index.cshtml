@{
    Layout = "_AdminLayout";
}

<h1 class="text-center ">List Pokemon</h1>
<table class="table table-striped table-hover m-auto mt-3">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tbodyPoke">
    </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="modalPoke" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Profile Pokemon</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-inline-block">
                <div class="p-5 d-inline-block">
                    <img src="#" alt="..." id="img" style="margin-top:-150%">
                </div>
                <div class="ms-3 d-inline-block w-50">
                    <h3 class="text-center" id="nama"></h3>
                    <label for="ability"><b>Ability: </b></label>
                    <div id="ability" class="p-1">
                    </div>
                    <label for="type"><b>Type: </b></label>
                    <div id="type" class="p-2">
                    </div>
                    <label for="stats"><b>Stats: </b></label>
                    <div class="pd-3">
                        <label for="stats"><b>HP: </b></label>
                        <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25"
                             aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar bg-success" id="hpStat"></div>
                        </div>
                    </div>
                    <div class="pd-3">
                        <label for="stats"><b>Attack: </b></label>
                        <div class="progress" role="progressbar" aria-label="Info example" aria-valuenow="50"
                             aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar bg-info text-dark" id="attackStat"></div>
                        </div>
                    </div>
                    <div class="pd-3">
                        <label for="stats"><b>Defense: </b></label>
                        <div class="progress" role="progressbar" aria-label="Warning example" aria-valuenow="75"
                             aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar bg-warning text-dark" id="defenseStat"></div>
                        </div>
                    </div>
                    <div class="pd-3">
                        <label for="stats"><b>Speed: </b></label>
                        <div class="progress" role="progressbar" aria-label="Danger example" aria-valuenow="100"
                             aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar bg-danger" id="speedStat"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/latihan.js" asp-append-version="true"></script>
}